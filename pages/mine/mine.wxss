.mine_top{
    width:100%;
    height:270rpx;
    position: relative;
}
.mine_bg{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
}
.mine_detail{
    display: flex;
    position: absolute;
    top:45rpx;
    left:35rpx;
}
.mine_img{
  width:120rpx;
  height:120rpx;
  overflow: hidden;
  border:2rpx solid #fff;
  border-radius: 50%;
  margin-right: 20rpx;
}
.mine_img>image{
    width:100%;
    height:100%;
}
.mine_nickName{
    font-size:36rpx;
    color:#fff;
    font-weight: bold;
    padding-bottom: 20rpx;
}
.mine_company{
    width: 70%;
    font-size:22rpx;
    opacity:0.7;
    color:#fff;
}
.mine_bot{
    position: relative;
    top: -30rpx;
    padding:0 30rpx 50rpx;
    box-sizing: border-box;
    background-color: #F5F5F5;
}
